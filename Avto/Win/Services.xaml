<Window x:Class="Avto.Win.Services"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Avto.Win"
        mc:Ignorable="d"
        Title="Services" Height="450" Width="800">
    <Grid>
        <TextBlock MouseLeftButtonDown="TextBlock_MouseLeftButtonDown"
                   Text="Авторизация">
            
        </TextBlock>
        <Rectangle Height="400" Width="400">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0.5, 0" EndPoint="0.5, 1">
                    <GradientStop Offset="0.9" Color="Gold"/>
                    <GradientStop Offset="0.6" Color="Black"/>
                    <GradientStop Offset="0.2" Color="WhiteSmoke"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</Window>
